{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
